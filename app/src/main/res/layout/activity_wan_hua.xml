<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WanHua">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="任務發佈"
                android:textSize="32dp"
                android:layout_marginLeft="120dp"
                android:padding="10dp"
                android:textStyle="bold"
                android:textColor="#4169E1"/>

            <Button
                android:id="@+id/bt_2wh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="任務榜"/>


        </RelativeLayout>






        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">




            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textViewwh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 任務地址 : "
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editTextwh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint=" 地址"
                    android:background="@drawable/bg_btn2"
                    android:inputType="textPersonName"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2wh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 聯絡電話 : "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/editText2wh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/bg_btn2"
                    android:inputType="number"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:hint=" 0912345678"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView3wh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 預算金額 : "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/editText3wh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/bg_btn2"
                    android:inputType="textPersonName"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:hint=" 1000"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView4wh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 期        限 : "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/editText4wh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/bg_btn2"
                    android:inputType="textPersonName"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:hint=" 2068/1/1"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5wh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 任務內容 : "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <EditText
                    android:id="@+id/editText5wh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:background="@drawable/bg_btn2"
                    android:inputType="textPersonName"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:hint=" 蜘蛛大隻，小心"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6wh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 發  佈  人 : "
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/textView6a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:hint=" 我的很大"/>
            </TableRow>



        </TableLayout>



        <ListView
            android:id="@+id/LVwh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/tv_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已徵到人"
            android:textColor="@color/white"/>


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"


            >

            <Button
                android:id="@+id/buttonwh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="確認發佈"
                android:textSize="24sp"
                android:padding="10dp"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/button2wh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="已完成"
                android:textSize="24sp"
                android:layout_toRightOf="@+id/buttonwh"
                android:padding="10dp"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/button3wh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="刪除"
                android:textSize="24sp"
                android:layout_toRightOf="@+id/button2wh"
                android:padding="10dp"
                android:layout_marginLeft="15dp"/>



        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>